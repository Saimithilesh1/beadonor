<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = ".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/log" />

    <TextView
        android:id="@+id/pagetitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="-83dp"
        android:fontFamily="sans-serif"
        android:padding="12dp"
        android:layout_marginLeft="100dp"
        android:paddingLeft="20dp"
        android:text="Sign Up Here"
        android:textColor="#C00B12"
        android:textSize="74px"
        android:textStyle="bold" />
    <EditText
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:id = "@+id/username"
        android:textColor="#FF2020"
        android:textSize="34px"
        android:textColorHint="#FF2020"
        android:hint = "Enter Your Name"
        android:focusable = "true"
        android:padding="20dp"
        android:layout_marginTop = "10dp"
        android:layout_below = "@+id/pagetitle"
        android:layout_alignParentStart = "true"
        android:drawableLeft="@drawable/baseline_account_circle_24"
        android:drawablePadding="20dp"
        android:layout_alignParentEnd = "true" />
    <EditText
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:id = "@+id/mobile"
        android:textColor="#FF2020"
        android:textSize="34px"
        android:textColorHint="#FF2020"
        android:hint = "Enter Mobile No."
        android:focusable = "true"
        android:padding="20dp"
        android:layout_marginTop = "10dp"
        android:layout_below = "@+id/username"
        android:layout_alignParentStart = "true"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:drawablePadding="20dp"
        android:layout_alignParentEnd = "true" />

    <EditText
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:id = "@+id/mailID"
        android:textColor="#FF2020"
        android:textSize="34px"
        android:textColorHint="#FF2020"
        android:hint = "Enter Email ID"
        android:focusable = "true"
        android:padding="20dp"
        android:layout_marginTop = "10dp"
        android:layout_below = "@+id/mobile"
        android:layout_alignParentStart = "true"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="20dp"
        android:layout_alignParentEnd = "true" />



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id = "@+id/container"
        android:layout_below = "@+id/mailID">

        <EditText
            android:layout_width = "200dp"
            android:layout_height = "wrap_content"
            android:id = "@+id/age"
            android:textColor="#FF2020"
            android:textSize="34px"
            android:textColorHint="#FF2020"
            android:hint = "Age"
            android:focusable = "true"
            android:padding="20dp"
            android:layout_marginTop = "10dp"
            android:layout_alignParentStart = "true"
            android:drawableLeft="@drawable/baseline_live_help_24"
            android:drawablePadding="20dp"
            android:layout_alignParentEnd = "true" />
        <EditText
            android:layout_width = "200dp"
            android:layout_height = "wrap_content"
            android:id = "@+id/bgroup"
            android:textColor="#FF2020"
            android:textSize="34px"
            android:textColorHint="#FF2020"
            android:hint = "Blood Group"
            android:focusable = "true"
            android:padding="20dp"
            android:layout_marginTop = "10dp"
            android:layout_alignParentStart = "true"
            android:drawableLeft="@drawable/baseline_water_drop_24"
            android:drawablePadding="20dp"
            android:layout_alignParentEnd = "true" />
    </LinearLayout>
    <EditText
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:id = "@+id/address"
        android:textColor="#FF2020"
        android:textColorHint="#FF2020"
        android:hint = "Enter Address"
        android:focusable = "true"
        android:padding="20dp"
        android:layout_marginTop = "10dp"
        android:layout_alignParentStart = "true"
        android:layout_below = "@+id/container"
        android:drawableLeft="@drawable/baseline_location_on_24"
        android:drawablePadding="20dp"
        android:layout_alignParentEnd = "true" />
    <EditText
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:id = "@+id/password"
        android:textColor="#FF2020"
        android:textColorHint="#FF2020"
        android:hint = "Enter Password"
        android:focusable = "true"
        android:padding="20dp"
        android:layout_marginTop = "10dp"
        android:layout_alignParentStart = "true"
        android:layout_below = "@+id/address"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="20dp"
        android:layout_alignParentEnd = "true" />
    <EditText
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:id = "@+id/cpassword"
        android:textColor="#FF2020"
        android:textColorHint="#FF2020"
        android:hint = "Confirm Password"
        android:focusable = "true"
        android:padding="20dp"
        android:layout_marginTop = "10dp"
        android:layout_alignParentStart = "true"
        android:layout_below = "@+id/password"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="20dp"
        android:layout_alignParentEnd = "true" />

    <Button
        android:id="@+id/button"
        android:background="#FF2020"
        android:textColor="#FFF"
        android:layout_width="280dp"
        android:textSize="44px"
        android:textStyle="bold"
        android:layout_below = "@+id/cpassword"
        android:layout_centerHorizontal="true"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:bottomRightRadius="60dp"
        android:bottomLeftRadius="60dp"
        android:topLeftRadius="60dp"
        android:topRightRadius="60dp"
        android:text="Sign UP" />

    <TextView
        android:id="@+id/forgetpassword"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:padding="12dp"
        android:paddingLeft="20dp"
        android:text="Sign IN"
        android:textColor="#C00B12"
        android:textSize="44px"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/register_now"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_marginLeft="-153dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/button"

        android:fontFamily="sans-serif"
        android:padding="12dp"
        android:paddingLeft="20dp"
        android:text="Help"
        android:textAlignment="center"
        android:textColor="#C00B12"
        android:textSize="44px"
        android:textStyle="bold" />


</RelativeLayout>